{
    "swagger": "2.0",
    "info": {
    "version": "1.0.0",
    "title": "API Garage.com",
    "description": "API para a aplicação de e-commerce desenvolvida como OAT de WebII",
    "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/MIT"
    }
    },
    "host": "localhost:4000",
    "basePath": "/",
    "tags": [
    {
    "name": "Users",
    "description": "API de usuários"
    }
    ],
    "schemes": [
    "http"
    ],
    "consumes": [
    "application/json"
    ],
    "produces": [
    "application/json"
    ],
    "paths": {
        "/user/signup": {
        "post": {
        "tags": [
        "Users"
        ],
        "summary": "Criar novo usuário",
        "responses": {
        "201": {
        "description": "Created",
        "schema": {
        "$ref": "#/definitions/User"
        }
        }
        }
        }
        },
        "/user/login": {
            "post": {
            "tags": [
            "Users"
            ],
            "summary": "Fazer login de usuário",
            "responses": {
            "200": {
            "description": "OK",
            "schema": {
            "$ref": "#/definitions/UserLogin"
            }
            }
            }
            }
            },
            "/user/new-address": {
                "post": {
                "tags": [
                "Users"
                ],
                "summary": "Adicionar endereço para usuário",
                "responses": {
                "201": {
                "description": "Created",
                "schema": {
                "$ref": "#/definitions/UserAddress"
                }
                }
                }
                }
                }


        },
         "definitions": {
       
        "User": {
        "required": [
        "firstName",
        "_id",
        "lastName",
        "email",
        "password"
        ],
        "properties": {
        "_id": {
        "type": "string",
        "uniqueItems": true
        },
        "firstName": {
        "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "email":{
            "type":"string"
        },
        "password": {
            "type": "string",
            "required": true
        }
        }
    
        },
        "UserLogin":{
            "required": [
                "email",
                "password"
                ],
        "properties": {
        "email":{
            "type":"string"
        },
        "password": {
            "type": "string",
            "required": true
        }
        }
        },
        "UserAddress":{
        "required": [
            "_id",
            "user",
            "address"
        ],
        "properties": {
        "_id":{
            "type":"string"
        },
        "user": {
            "type": "string",
            "required": true
        },
        "address": {
            "fullName":{
                "type": "string",
                "required": true
            },
            "mobileNumber":{
                "type": "number",
                "required": true
            },
            "pinCode":{
                "type": "number",
                "required": true
            },
            "locality":{
                "type": "string",
                "required": true
            },
            "address":{
                "type": "string",
                "required": true
            },
            "cityDistrictTown":{
                "type": "string",
                "required": true
            },
            "state":{
                "type": "string",
                "required": true
            },
            "lendmark":{
                "type": "string",
                "required": true
            },
            "alternatePhoneNumber":{
                "type": "number",
                "required": true
            }
        }
        }
        }
    }
}
